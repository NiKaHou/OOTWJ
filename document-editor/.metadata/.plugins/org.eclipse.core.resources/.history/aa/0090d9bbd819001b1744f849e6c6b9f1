
import java.io.IOException;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;
import pattern_package.WindowFactory;
import pattern_package.WindowFactoryFlexible;
import pattern_package.WindowFactoryFullscreen;

public class Main extends Application {
//	private WindowFactory<Main> windowFactory;
	static private Main main;
	private Stage primaryStage;
	
	public Main() {
		main = this;
	}
	@Override
	public void start(Stage primaryStage) throws IOException {
		this.primaryStage = primaryStage;
		Parent primaryPage = FXMLLoader.load(getClass().getResource("SettingPage.fxml"));
		Scene primaryScene = new Scene(primaryPage);
		this.primaryStage.setTitle("Setting");
		this.primaryStage.setScene(primaryScene);
		this.primaryStage.show();
	}
	
	static public Main getInstance() {
		return main;
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
