package factory_pattern;

import java.io.IOException;
import java.util.HashMap;
import java.util.Map;

import strategy_pattern.WindowSize;
import strategy_pattern.WindowSizeFlexible;
import strategy_pattern.WindowSizeFixed;

abstract public class WindowFactory<Main> {
	protected Main mainClass;
	protected Map<String, WindowSize> strategyMapping = new HashMap<String, WindowSize>();
	public WindowFactory(Main mainClass) {
		this.mainClass = mainClass;
		this.strategyMapping.put("flexible", new WindowSizeFlexible());
		this.strategyMapping.put("fullSize", new WindowSizeFixed());
	}
	abstract public void createMainPage () throws IOException;
}
